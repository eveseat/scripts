<VirtualHost *:80>
    ServerName app
    DocumentRoot "/var/www/seat/public"
    ErrorLog /var/log/apache2/seat.local-error.log
    CustomLog /var/log/apache2/seat.local-access.log combined
    <Directory "/var/www/seat/public">
        AllowOverride All
        Order allow,deny
        Allow from all
    </Directory>
</VirtualHost>